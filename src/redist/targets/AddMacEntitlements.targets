<Project>
    <!-- This is needed as Arcade signing does not add entitlements. This generates an ad-hoc signature with entitlements that would later be replaced by the actual signature. -->
    <Target Name="AddEntitlements" AfterTargets="GenerateLayout">
        <Exec Command="codesign -s - -f --entitlements $(MSBuildThisFileDirectory)entitlements.plist $(ArtifactsDir)layout/dotnet-core-uninstall/dotnet-core-uninstall" />
    </Target>
</Project>